@using DynamicTest.Core.Models
@using System.Dynamic
<div class="data-table">
<SfGrid
    DataSource="@Data"
    ShowColumnChooser="true"
    FrozenColumns="1"
    EnableHover="true"
    Toolbar="@(new List<string>() {"Search", "ColumnChooser"})"
    AllowPaging="true"
    AllowTextWrap="true"
    AllowFiltering="true"
    AllowSorting="true">
    <GridFilterSettings Type="FilterType.Excel"></GridFilterSettings>
    <GridPageSettings PageSize="25"></GridPageSettings>
    <GridColumns>
        @foreach (var memberName in Data.First().GetDynamicMemberNames())
        {
            <GridColumn Field=@memberName HeaderText=@memberName.Remove(0,8) Width="200"></GridColumn>
        }
    </GridColumns>
</SfGrid>
</div>

<style>
    .data-table {
    width: 80%;
    max-width: 100%;
    height: 100px !important;
        max-height: 100% !important;
    position: absolute;
    }
    .data-table > * {
    }    
</style>

