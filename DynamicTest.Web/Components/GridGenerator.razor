@using DynamicTest.Core.Models
@using System.Dynamic
<SfGrid
    DataSource="@Data"
    ShowColumnChooser="true"
    FrozenColumns="1"
    EnableHover="true"
    Toolbar="@(new List<string>() {"Search", "ColumnChooser"})"
    AllowPaging="true"
    AllowTextWrap="true"
    AllowFiltering="true"
    AllowPdfExport="true"
    AllowSorting="true">
    <GridFilterSettings Type="FilterType.Excel"></GridFilterSettings>
    <GridPageSettings PageSize="25"></GridPageSettings>
    <GridColumns>
        @foreach (var memberName in Data.First().GetDynamicMemberNames())
        {
            <GridColumn Field=@memberName HeaderText=@memberName.Remove(0,8)></GridColumn>
        }
    </GridColumns>
</SfGrid>

@code {
    [Parameter] public List<DynamicDictionary> Data { get; set; }
}