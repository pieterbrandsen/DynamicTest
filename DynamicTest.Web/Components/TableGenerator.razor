@using Newtonsoft.Json.Linq
@using System.Dynamic
@using DynamicTest.Core.Models
@using Microsoft.AspNetCore.Components.Rendering


<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <SfTab>
            <TabItems>
                @foreach (var (key, value) in Data)
                {
                    <TabItem>
                        <ChildContent>
                            <TabHeader Text=@key></TabHeader>
                        </ChildContent>
                        <ContentTemplate>
                            <div class="tab-content">
                                <GridGenerator Data=@value></GridGenerator>
                            </div>
                        </ContentTemplate>
                    </TabItem>
                }
            </TabItems>
        </SfTab>
    </div>
</div>





@code {

    [Parameter]
    public Dictionary<string, List<DynamicDictionary>> Data { get; set; }

    [Parameter]
    public bool InitializeTable { get; set; }

}